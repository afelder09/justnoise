<div class="c-content">
  <h2>Edit group:</h2>
  <form class="c-form" action="/group/edit/{{group.id}}" method="post">
      <div class="c-form__item">
        <h4 class="c-form__title">Group name:</h4>
        <input type="name" name="name" value="{{group.name}}">
      </div>
      <div class="c-form__item">
        <h4 class="c-form__title">Description:</h4>
        <input type="description" name="description" value="{{group.description}}">
      </div>
      <div class="c-form__item">
        <button type="submit" name="submit">Submit</button>
      </div>
  </form>
</div>
